<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.voicenote.VoiceNoteFragment">

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="159dp"
        android:layout_height="167dp"
        android:layout_marginTop="212dp"
        android:src="@drawable/voice_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_big_margin"
        android:text="Start record to report a case"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_next" />

    <Button
        android:id="@+id/btn_voice_not"
        android:layout_width="127dp"
        android:layout_height="58dp"
        android:layout_marginTop="@dimen/standard_big_margin"
        android:backgroundTint="@color/btn_background"
        android:padding="16dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_start_record" />

</androidx.constraintlayout.widget.ConstraintLayout>