<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.ui.change_password.ChangePasswordFragment">
    <TextView
        android:id="@+id/welcmtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter New Password"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Report illegal detention cases and police
harassment"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/welcmtext" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pswrdTextField1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="Enter Password"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/welcmtext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chngforgotpswrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pswrdTextField2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="Confirm Password"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/pswrdTextField1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chngforgotpswrd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/signUpbtn"
        app:layout_constraintTop_toBottomOf="@id/pswrdTextField2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0A2252"
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>